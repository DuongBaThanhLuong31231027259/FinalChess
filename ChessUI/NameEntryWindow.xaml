<Window x:Class="ChessUI.NameEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Player Names" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Enter Player 1 Name:" Foreground="Black" 
                   Margin="5" FontSize="16" HorizontalAlignment="Center"/>
        <TextBox x:Name="Player1Input" Width="200" Margin="5"/>
        <TextBlock Text="Enter Player 2 Name:" Foreground="Black" 
                   Margin="5" FontSize="16" HorizontalAlignment="Center"/>
        <TextBox x:Name="Player2Input" Width="200" Margin="5"/>
        <Button Content="Start Game" Width="100" 
                HorizontalAlignment="Center" Margin="20" Click="StartGame_Click"/>
    </StackPanel>
</Window>
